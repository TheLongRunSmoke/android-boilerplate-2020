<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pref_category_theme">

        <ListPreference
            app:defaultValue="AS_SYSTEM"
            app:entries="@array/theme_list_entries"
            app:entryValues="@array/theme_list_values"
            app:key="@string/pref_theme_key"
            app:title="@string/pref_theme_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_category_example">

        <EditTextPreference
            app:key="@string/pref_example_text_key"
            app:title="@string/pref_example_text_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/pref_example_switch_key"
            app:title="@string/pref_example_switch_title" />

        <ListPreference
            app:entries="@array/example_list_entries"
            app:entryValues="@array/example_list_values"
            app:key="@string/pref_example_list_key"
            app:title="@string/pref_example_list_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>